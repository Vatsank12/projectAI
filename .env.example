# VigilantAI Environment Configuration
# Copy this file to .env and fill in your values

# Groq API Configuration (Optional - for enhanced AI assistant)
# Get free API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# FastAPI Configuration
DEBUG=true
ENVIRONMENT=development

# System Monitoring
MONITORING_INTERVAL_MS=1000
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90

# Features
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_SCANNER=true
ENABLE_PROCESS_MONITOR=true
ENABLE_ALERTS=true
ENABLE_AI_ASSISTANT=true

# Security
ENABLE_AUTH=true
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin

# Notes:
# - GROQ_API_KEY: Get free at https://console.groq.com/keys
# - Leave GROQ_API_KEY empty to use local AI (still works great!)
# - Thresholds are in percentages (10-95 valid range)
# - Monitoring interval in milliseconds (500-5000 valid range)